---
import BaseLayout from "../../layouts/BaseLayout.astro";

// 公開後の正規URL（必要に応じてあなたのドメインに変更OK）
const canonical = "https://minna-circle.vercel.app/en/vendor/new";
---

<BaseLayout title="Create a circle" lang="en" canonical={canonical}>
  <section class="max-w-5xl mx-auto px-4 py-12">
    <h1 class="text-3xl md:text-4xl font-extrabold tracking-tight">
      Create a Circle
    </h1>
    <p class="text-gray-600 mt-2">
      Please enter the basic information of your circle. (This form is a demo.)
    </p>

    <div class="mt-8 rounded-xl border bg-white/60 backdrop-blur p-6">
      <div class="space-y-6">
        <div>
          <label class="block text-sm font-medium mb-2" for="circle-name">Circle name</label>
          <input
            id="circle-name"
            type="text"
            placeholder="e.g. Minna Hiking Club"
            class="w-full rounded-lg border px-4 py-3 focus:outline-none focus:ring-2 focus:ring-black/10"
          />
        </div>

        <div>
          <label class="block text-sm font-medium mb-2" for="circle-desc">Description</label>
          <textarea
            id="circle-desc"
            rows="6"
            placeholder="Write activities, recruitment conditions, etc."
            class="w-full rounded-lg border px-4 py-3 focus:outline-none focus:ring-2 focus:ring-black/10"
          ></textarea>
        </div>

        <div class="flex gap-3">
          <button
            type="button"
            class="rounded-lg bg-black text-white px-5 py-2.5 hover:opacity-90"
          >
            Save draft (demo)
          </button>

          <a
            href="/en/"
            class="rounded-lg border px-5 py-2.5 hover:bg-gray-50"
          >
            Back to Home
          </a>
        </div>
      </div>
    </div>
  </section>
</BaseLayout>
