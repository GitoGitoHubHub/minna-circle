---
import BaseLayout from "../../layouts/BaseLayout.astro";
import JsonLd from "../../components/JsonLd.astro";

/**
 * ダミーデータ（詳細ページと同一IDを使用）
 * 実データ接続時は API/DB から取得してください。
 */
const allEvents = [
  {
    id: "ev-001",
    title: "朝活ランニング＠木場公園",
    description: "初心者歓迎。会話しながら軽く3km！ウォームアップ→ゆるラン→ストレッチの流れです。",
    image: "/og.png",
    dateText: "2025-09-01 07:00",
    endText:  "2025-09-01 08:00",
    placeText: "木場公園集合",
    areaText: "江東区",
    fee: 0,
    capacity: 20,
    organizer: "MinnaCircle Running",
    createdAt: "2025-08-10T08:00:00+09:00",
    tags: ["ランニング","初心者歓迎","朝活"]
  },
  {
    id: "ev-002",
    title: "週末バスケ個人参加",
    description: "経験不問。チーム分け→スクリメージ中心。怪我防止のため準備運動を各自でお願いします。",
    image: "/og.png",
    dateText: "2025-09-06 18:00",
    endText:  "2025-09-06 20:00",
    placeText: "江東区スポセン",
    areaText: "江東区",
    fee: 800,
    capacity: 30,
    organizer: "MinnaCircle Basketball",
    createdAt: "2025-08-14T18:00:00+09:00",
    tags: ["バスケ","個サル","初心者歓迎"]
  },
  {
    id: "ev-003",
    title: "英会話ゆるカフェ会",
    description: "カジュアル英会話。レベル不問。子連れ可。スモールトークのテーマカードを用意します。",
    image: "/og.png",
    dateText: "2025-09-07 10:00",
    endText:  "2025-09-07 11:30",
    placeText: "清澄白河",
    areaText: "江東区",
    fee: 500,
    capacity: 12,
    organizer: "MinnaCircle English",
    createdAt: "2025-08-12T12:00:00+09:00",
    tags: ["英会話","カフェ","親子OK"]
  }
];

/** メタ */
const pageTitle = "イベント一覧 | MinnaCircle";
const pageDesc  = "MinnaCircleの最新イベント一覧。日時・場所・費用から検索できます。";

/** サイトOrigin（astro.configのsiteがあれば使用） */
const siteOrigin = (Astro.site && Astro.site.href) ? Astro.site.href.replace(/\/$/, "") : "";

/** ItemList JSON-LD を生成 */
const itemListLd = {
  "@context": "https://schema.org",
  "@type": "ItemList",
  "name": "MinnaCircle Events",
  "itemListElement": allEvents.map((e, i) => ({
    "@type": "ListItem",
    "position": i + 1,
    "name": e.title,
    ...(siteOrigin ? { "url": `${siteOrigin}/events/${e.id}` } : {}),
    "image": e.image,
    "description": e.description
  }))
};
---

<BaseLayout title={pageTitle} lang="ja" description={pageDesc}>
  <!-- JSON-LD: ItemList（イベント一覧） -->
  <JsonLd data={itemListLd} />

  <section class="max-w-6xl mx-auto px-4 py-8 md:py-12">
    <h1 class="text-2xl md:text-3xl font-extrabold mb-6">イベント一覧</h1>

    <!-- 検索/ソートUI（簡易） -->
    <div class="mb-6 flex flex-wrap gap-3 text-sm">
      <a href="/search?type=event" class="px-4 py-2 rounded-xl border hover:bg-gray-50">詳細検索へ</a>
    </div>

    <!-- グリッド表示 -->
    <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
      {allEvents.map((e) => (
        <a href={`/events/${e.id}`} class="block bg-white rounded-2xl shadow hover:shadow-md transition">
          <img src={e.image} alt={e.title} class="rounded-t-2xl w-full h-40 object-cover" loading="lazy" />
          <div class="p-4">
            <h2 class="font-bold line-clamp-2">{e.title}</h2>
            <p class="text-sm text-gray-600 mt-1 line-clamp-2">{e.description}</p>
            <div class="mt-2 text-xs text-gray-500 space-y-1">
              <div>📅 {e.dateText}{e.endText ? ` 〜 ${e.endText}` : ""}</div>
              <div>📍 {e.placeText}（{e.areaText}）</div>
              {Number.isFinite(e.fee) && (<div>💴 {e.fee === 0 ? "無料" : `¥${e.fee.toLocaleString()}`}</div>)}
            </div>
            <div class="mt-2 flex flex-wrap gap-1">
              {e.tags?.map((t) => <span class="px-2 py-0.5 bg-indigo-50 text-indigo-700 rounded-full text-[11px]">{t}</span>)}
            </div>
          </div>
        </a>
      ))}
    </div>
  </section>
</BaseLayout>
