---
import BaseLayout from "../layouts/BaseLayout.astro";

const title = "Members | MinnaCircle";
const description = "MinnaCircleの参加メンバーを紹介します。共通の趣味・タグでつながり、新しい仲間を見つけましょう。";

/** ダミーデータ（将来DB/API連携予定） */
const members = [
  {
    id: 1,
    name: "山田 太郎",
    nickname: "タロー",
    tags: ["バスケ", "旅行", "英語"],
    joinedCircles: ["週末バスケ", "英会話カフェ"],
    avatar: "https://placehold.co/96x96?text=T"
  },
  {
    id: 2,
    name: "佐藤 花子",
    nickname: "ハナ",
    tags: ["料理", "ハイキング"],
    joinedCircles: ["アウトドア部"],
    avatar: "https://placehold.co/96x96?text=H"
  },
  {
    id: 3,
    name: "John",
    nickname: "ジョン",
    tags: ["写真", "日本語勉強中"],
    joinedCircles: ["写真クラブ", "日本語交流会"],
    avatar: "https://placehold.co/96x96?text=J"
  }
];
---

<BaseLayout title={title} lang="ja" meta_description={description}>
  <section class="max-w-6xl mx-auto px-4 py-10 md:py-14">
    <header class="mb-10 text-center">
      <h1 class="text-2xl md:text-4xl font-extrabold">Members</h1>
      <p class="text-gray-600 mt-2 md:text-lg">
        趣味タグや参加サークルから、気の合う仲間を探してみましょう。
      </p>
    </header>

    <div class="grid gap-6 sm:grid-cols-2 md:grid-cols-3">
      {members.map((m) => (
        <div key={m.id} class="bg-white rounded-2xl shadow hover:shadow-lg transition p-6 text-center">
          <img src={m.avatar} alt={m.name} class="mx-auto rounded-full w-24 h-24 mb-4 object-cover" />
          <h2 class="text-lg font-semibold">{m.nickname} <span class="text-sm text-gray-500">({m.name})</span></h2>

          <div class="mt-3 flex flex-wrap justify-center gap-2">
            {m.tags.map((tag) => (
              <span class="px-3 py-1 bg-indigo-50 text-indigo-700 rounded-full text-xs">{tag}</span>
            ))}
          </div>

          <div class="mt-4">
            <h3 class="text-sm font-medium text-gray-500 mb-1">参加サークル</h3>
            <ul class="text-sm text-gray-700 space-y-1">
              {m.joinedCircles.map((c) => <li>・{c}</li>)}
            </ul>
          </div>

          <div class="mt-5">
            <button class="px-4 py-2 bg-indigo-600 text-white rounded-xl shadow hover:bg-indigo-700 transition text-sm">
              プロフィールを見る
            </button>
          </div>
        </div>
      ))}
    </div>
  </section>
</BaseLayout>


