---
import BaseLayout from "../layouts/BaseLayout.astro";
import { members } from "../data/members";

const title = "Members | MinnaCircle";
const description = "MinnaCircle のメンバー紹介ページです。";
const canonical = "https://minna-circle.vercel.app/members";
---
<BaseLayout {title} {description} canonical={canonical} lang="ja">
  <section class="space-y-4">
    <h1 class="text-2xl font-bold">Members</h1>
    <ul class="space-y-3">
      {members.map(m => (
        <li class="border rounded p-3">
          <p class="font-semibold">{m.name}</p>
          <p class="text-sm text-gray-600">{m.role}</p>
          {m.bio && <p class="text-sm mt-1">{m.bio}</p>}
        </li>
      ))}
    </ul>
  </section>
</BaseLayout>
