---
const {
  lang = "ja",
  title =
    lang === "en"
      ? "Find your circle. Meet your people."
      : "趣味でつながる、仲間が見つかる。",
  subtitle =
    lang === "en"
      ? "Search circles, join activities, and create your own community."
      : "サークルを探す、活動に参加する、あなたのコミュニティをつくる。",
  ctaPrimaryHref = lang === "en" ? "/en/search" : "/search",
  ctaPrimaryLabel = lang === "en" ? "Search circles" : "サークルを探す",
  ctaSecondaryHref = lang === "en" ? "/en/vendor/new" : "/vendor/new",
  ctaSecondaryLabel = lang === "en" ? "Create a circle" : "サークルを作る",
} = Astro.props;
---

<section class="py-10 md:py-16">
  <div class="max-w-5xl mx-auto grid gap-6 md:grid-cols-2 items-center">
    <div class="space-y-4">
      <h1 class="text-3xl md:text-4xl font-extrabold leading-tight">
        {title}
      </h1>
      <p class="text-gray-600">{subtitle}</p>
      <div class="flex gap-3 pt-2">
        <a href={ctaPrimaryHref} class="px-4 py-2 rounded-lg bg-black text-white hover:opacity-90">
          {ctaPrimaryLabel}
        </a>
        <a href={ctaSecondaryHref} class="px-4 py-2 rounded-lg border border-gray-300 hover:bg-gray-50">
          {ctaSecondaryLabel}
        </a>
      </div>
    </div>

    <div class="rounded-2xl border bg-gradient-to-br from-gray-50 to-white p-4 md:p-6">
      <div class="aspect-[4/3] w-full rounded-xl border flex items-center justify-center text-gray-400">
        <!-- ここに後でイラストやOG画像を差し替え -->
        <span>{lang === "en" ? "Hero Image" : "ヒーロー画像"}</span>
      </div>
    </div>
  </div>
</section>

