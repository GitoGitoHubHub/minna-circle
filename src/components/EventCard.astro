---
const { event } = Astro.props as {
  event: {
    id: string;
    title: string;
    description?: string;
    image?: string;
    dateText?: string;
    placeText?: string;
    areaText?: string;
    fee?: number;
    popularity?: number;
  };
};
const cover = event.image || "/og.png";
---

<a href={`/events/${event.id}`} class="block rounded-2xl border shadow hover:shadow-lg transition bg-white overflow-hidden">
  <!-- 画像を小型サムネに固定（インラインstyle + !important で確実に適用） -->
  <img
    src={cover}
    alt={event.title}
    loading="lazy"
    decoding="async"
    style="display:block;width:100% !important;height:96px !important;object-fit:cover !important;object-position:center;"
  />

  <div class="p-4 space-y-2">
    <h3 class="text-lg font-bold line-clamp-2">{event.title}</h3>
    {event.description && <p class="text-sm text-gray-600 line-clamp-2">{event.description}</p>}
    {(event.dateText || event.placeText) && (
      <p class="text-xs text-gray-500">
        {event.dateText || ""}{event.placeText ? ` @ ${event.placeText}` : ""}
      </p>
    )}
    {event.areaText && <p class="text-xs text-gray-500">エリア: {event.areaText}</p>}
    {typeof event.fee === "number" && (
      <p class="text-xs text-gray-500">参加費: {event.fee === 0 ? "無料" : `¥${event.fee.toLocaleString?.() || event.fee}`}</p>
    )}
    {typeof event.popularity === "number" && <p class="text-xs text-gray-500">人気度: {event.popularity}</p>}
  </div>
</a>
