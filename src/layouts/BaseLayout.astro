---
import Nav from "../components/Nav.astro";
const {
  title = "Minna Circle",
  lang = "ja",
  description = "MinnaCircle",
  ogTitle = title,
  ogDescription = description,
  ogImage = "/og.png",   // 後で public に用意します
  canonical = undefined,
} = Astro.props;

const url = canonical ?? new URL(Astro.request.url).href;
---
<!doctype html>
<html lang={lang}>
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width,initial-scale=1" />
    <meta name="description" content={description} />
    <link rel="canonical" href={url} />
    <title>{title}</title>

    <!-- OG / Twitter -->
    <meta property="og:type" content="website" />
    <meta property="og:title" content={ogTitle} />
    <meta property="og:description" content={ogDescription} />
    <meta property="og:image" content={ogImage} />
    <meta property="og:url" content={url} />
    <meta name="twitter:card" content="summary_large_image" />
  </head>
  <body class="min-h-dvh text-gray-800">
    <header class="bg-white shadow-sm">
      <div class="max-w-5xl mx-auto flex items-center justify-between p-4">
        <a href={lang === "en" ? "/en/" : "/"} class="font-bold">MinnaCircle</a>
        <Nav lang={lang} />
      </div>
    </header>

    <main class="max-w-5xl mx-auto p-6">
      <slot />
    </main>

    <footer class="border-t mt-10">
      <div class="max-w-5xl mx-auto p-4 text-xs text-gray-500">
        © {new Date().getFullYear()} MinnaCircle
      </div>
    </footer>
  </body>
</html>
