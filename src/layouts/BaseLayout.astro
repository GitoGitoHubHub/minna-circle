---
/**
 * BaseLayout
 * - canonical / meta / OG 既存維持
 * - Organization の JSON-LD を恒常出力（sameAs/絶対ロゴ対応）
 *
 * Props:
 *  - title?: string
 *  - description?: string
 *  - lang?: string ("ja" | "en" など) デフォルト: "ja"
 *  - image?: string  og:image 絶対URL推奨（未指定時は /og.png を使用）
 */
import JsonLd from "../components/JsonLd.astro";
import { buildOrganization } from "../lib/schema";

const {
  title = "MinnaCircle",
  description = "サークル・イベントの検索と参加ができるコミュニティプラットフォーム。",
  lang = "ja",
  image,
} = Astro.props;

// サイトのオリジン（astro.configのsiteがあれば優先）
const origin = (Astro.site ? String(Astro.site) : Astro.url.origin) ?? "";
const url = new URL(Astro.url.pathname + Astro.url.search, origin || undefined).toString();

// og:image は props.image 優先、なければ /og.png
const ogImage = image ?? (origin ? `${origin}/og.png` : "/og.png");

// Organization スキーマ（sameAs/ロゴは絶対URLに）
const orgSchema = buildOrganization({
  name: "MinnaCircle",
  url: origin || url,
  logo: origin ? `${origin}/og.png` : undefined,
  sameAs: [
    // ★ あるものだけ残してください
    "https://x.com/your_account",
    "https://www.instagram.com/your_account",
    // "https://www.facebook.com/your_account",
    // "https://www.youtube.com/@your_account",
  ].filter(Boolean),
});
---

<html lang={lang}>
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <title>{title}</title>
    <meta name="description" content={description} />

    <!-- Canonical -->
    <link rel="canonical" href={url} />

    <!-- Favicon / App Icons -->
    <link rel="icon" href="/favicon.ico" sizes="any" />
    <link rel="icon" href="/favicon.svg" type="image/svg+xml" />
    <link rel="apple-touch-icon" href="/apple-touch-icon.png" />

    <!-- Open Graph -->
    <meta property="og:type" content="website" />
    <meta property="og:site_name" content="MinnaCircle" />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:url" content={url} />
    <meta property="og:image" content={ogImage} />

    <!-- Twitter -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={ogImage} />

    <!-- JSON-LD: Organization（全ページ共通） -->
    <JsonLd data={orgSchema} />
  </head>
  <body class="min-h-screen antialiased text-gray-900">
    <slot />
  </body>
</html>

