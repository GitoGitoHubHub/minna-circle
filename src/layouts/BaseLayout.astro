---
const { title = "Minna Circle", lang = "ja", description = "MinnaCircle" } = Astro.props;
---
<!doctype html>
<html lang={lang}>
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width,initial-scale=1" />
    <meta name="description" content={description} />
    <title>{title}</title>
    <!-- Tailwind を使っているのでベースはこれでOK -->
  </head>
  <body class="min-h-dvh text-gray-800">
    <header class="bg-white shadow-sm">
      <div class="max-w-5xl mx-auto flex items-center justify-between p-4">
        <a href="/" class="font-bold">MinnaCircle</a>
        <nav class="text-sm flex gap-4">
          <a href="/" class="hover:underline">ホーム</a>
          <a href="/en/" class="hover:underline">EN</a>
        </nav>
      </div>
    </header>

    <main class="max-w-5xl mx-auto p-6">
      <slot />
    </main>

    <footer class="border-t mt-10">
      <div class="max-w-5xl mx-auto p-4 text-xs text-gray-500">
        © {new Date().getFullYear()} MinnaCircle
      </div>
    </footer>
  </body>
</html>
