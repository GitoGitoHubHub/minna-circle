---
import { AstroHead } from "astro";
---

<html lang={Astro.props.lang || "ja"}>
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{Astro.props.title}</title>
    <meta name="description" content={Astro.props.description} />
    <link rel="canonical" href={`https://minna-circle.vercel.app${Astro.props.path}`} />

    <!-- Favicon & OGP -->
    <link rel="icon" href="/favicon.ico" sizes="any" />
    <link rel="icon" href="/favicon.svg" type="image/svg+xml" />
    <link rel="apple-touch-icon" href="/og.png" />
    <meta property="og:image" content="/og.png" />

    <!-- Organization schema.org JSON-LD -->
    <script type="application/ld+json">
      {JSON.stringify({
        "@context": "https://schema.org",
        "@type": "Organization",
        "name": "MinnaCircle",
        "url": "https://minna-circle.vercel.app",
        "logo": "https://minna-circle.vercel.app/og.png",
        "sameAs": []
      })}
    </script>
  </head>
  <body class="font-sans antialiased">
    <slot />
  </body>
</html>
